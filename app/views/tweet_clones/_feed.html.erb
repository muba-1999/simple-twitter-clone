<div class="column is-half">
    <% if user_signed_in? %>
        <article class="media box">
            <figure class="media-left">
                <p class="image is-64x64">
                    <%= gravatar_image_tag(current_user.email, size: 64, alt: current_user.name) %>
                </p>
            </figure>
            <div class="media-content">
                <%= render 'tweet_clones/form' %>
            </div>
        </article>
    <% end %>

    <% @tweet_clones.each do | tweet_clone | %>

        <div class="box">
            <article class="media">
                <div class="media-left">
                    <figure class="image is-64x64">
                        <%= gravatar_image_tag(tweet_clone.user.email, size: 64, alt: tweet_clone.user.name) %>
                    </figure>
                </div>

                <div class="media-content">
                    <div class="content">
                        <strong><%= tweet_clone.user.name %></strong><br/>
                        <small><%= tweet_clone.user.username %></small><br/>
                        <p><%= tweet_clone.tweet_clone %></p>
                    </div>

                    <nav class="level">
                        <div class="level-left is-mobile">
                            <% if user_signed_in? %>
                                <%= link_to tweet_clone, class: "level-item" do %>
                                    <span class="icon"><i class="fa fa-link" aria-hidden='true'></i></span>
                                <% end %>

                                <%= link_to edit_tweet_clone_path(tweet_clone), class: "level-item" do %>
                                    <span class="icon"><i class="fa fa-pencil" aria-hidden='true'></i></span>
                                <% end %>

                                <%= link_to tweet_clone, method: :delete, data: {confirm: 'Are you sure you want to delete this tweet_clone?'} do %>
                                    <span class="icon"><i class="fa fa-trash-o" aria-hidden='true'></i></span>
                                <% end %>
                            <% end %>
                        </div>
                    </nav>
                </div>
            </article>
        </div>
    <% end %>    
</div>

