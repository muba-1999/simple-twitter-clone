<%= simple_form_for(@tweet_clone) do |f| %>
  <%= f.error_notification %>
  <div class="field">
    <div class="control">
      <%= f.input :tweet_clone, label: "Tweet_clone about it", input_html: {class: "textarea"},
      wrapper: false,
      label_html: {class: "label"},
      placeholder: "compose a new tweet_clone....",
      autofocus: true %>
    </div>
  </div>

  <%= f.button :submit, class: "button is-info" %>
<% end %>
